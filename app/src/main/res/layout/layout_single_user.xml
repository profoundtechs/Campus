<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivSingleUserPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_image"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tvSingleUserName"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/ivSingleUserPic"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivSingleUserPic"
        android:text="@string/display_name"
        android:textColor="#222222"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ivSingleUserPic" />

    <TextView
        android:id="@+id/tvSingleUserRole"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/tvSingleUserName"
        android:layout_below="@+id/tvSingleUserName"
        android:text="@string/user_default_status"
        android:layout_alignLeft="@+id/tvSingleUserName" />

    <ImageView
        android:id="@+id/ivOnlineStatus"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/ivSingleUserPic"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/online_status_picture"
        android:visibility="invisible"
        android:layout_marginLeft="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_below="@+id/ivSingleUserPic"/>

</RelativeLayout>