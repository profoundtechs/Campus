<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.profoundtechs.campus.OptionalSettingsActivity">

    <include
        android:id="@+id/toolbarOptionalSettings"
        layout="@layout/layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarOptionalSettings">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvOptionalSettingsInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Additional Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/tvOptionalSettingsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tvOptionalSettingsInfo"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp" />

            <LinearLayout
                android:id="@+id/llOptionalSettingsAcademic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:id="@+id/llOptionalSettingsUniversity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingStart="30dp">

                    <TextView
                        android:id="@+id/tvOptionalSettingsUniversityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="University"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/tvOptionalSettingsUniversity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp" />

                <LinearLayout
                    android:id="@+id/llOptionalSettingsRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingStart="30dp">

                    <TextView
                        android:id="@+id/tvOptionalSettingsRoleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Role"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/tvOptionalSettingsRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp" />

                <LinearLayout
                    android:id="@+id/llOptionalSettingsDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingStart="30dp">

                    <TextView
                        android:id="@+id/tvOptionalSettingsDepartmentTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/tvOptionalSettingsDepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp" />

                <LinearLayout
                    android:id="@+id/llOptionalSettingsLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingStart="30dp">

                    <TextView
                        android:id="@+id/tvOptionalSettingsLevelTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/tvOptionalSettingsLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOptionalSettingsDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/llOptionalSettingsAcademic"
                android:weightSum="10"
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:paddingLeft="30dp"
                    android:orientation="vertical"
                    android:paddingStart="30dp">

                    <TextView
                        android:id="@+id/tvOptionalSettingsDobTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Born in"/>

                    <TextView
                        android:id="@+id/tvOptionalSettingsDob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/ibOptionalSettingsDatePicker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    app:srcCompat="@drawable/ic_baseline_edit_dark"
                    android:background="@android:color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llOptionalSettingsButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btnOptionalSettingsSave"
            android:text="Submit Settings"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginRight="4dp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/btnOptionalSettingsLater"
            android:text="Do It Later"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_weight="5"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

</RelativeLayout>
